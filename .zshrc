# alias
alias ll='ls -lGF'
alias ls='ls -GF'
alias la='ls -A'
alias l='ls'
alias vim='nvim'
alias ..='cd ..'
alias y='yazi'

# lsd
# https://github.com/lsd-rs/lsd
alias ls='lsd'

